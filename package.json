{
  "name": "dm-ui",
  "version": "0.0.0",
  "main": "./lib/index.umd.js",
  "module": "./lib/index.es.js",
  "typings": "./lib/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.es.js",
      "require": "./lib/src/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite --config ./build/base.config.ts",
    "build:lib": "vue-tsc --noEmit --skipLibCheck && rimraf lib && vite build --config ./build/lib.config.ts",
    "build:docs": "vue-tsc --noEmit --skipLibCheck && rimraf docs && vite build --config ./build/docs.config.ts",
    "gen": "node ./scripts/gen/index.js",
    "preinstall": "npx -y only-allow pnpm",
    "test": "jest",
    "format": "prettier --write .",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix"
  },
  "dependencies": {
    "@vitejs/plugin-vue-jsx": "^1.3.2",
    "@vueuse/head": "^0.7.4",
    "lodash-es": "^4.17.21",
    "vite-plugin-md": "^0.11.6",
    "vite-plugin-windicss": "^1.5.4",
    "vue": "^3.2.25",
    "vue-router": "4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^27.0.3",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^17.0.0",
    "@types/prismjs": "^1.16.6",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@vitejs/plugin-vue": "^2.0.0",
    "@vue/server-renderer": "^3.2.26",
    "@vue/test-utils": "^2.0.0-rc.17",
    "babel-jest": "26",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "jest": "26",
    "prettier": "^2.5.1",
    "prismjs": "^1.25.0",
    "rimraf": "^3.0.2",
    "sass": "^1.45.0",
    "ts-jest": "26",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vite-plugin-dts": "^0.9.6",
    "vite-plugin-pages": "^0.19.4",
    "vite-ssg": "^0.17.1",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-tsc": "^0.29.8"
  }
}
